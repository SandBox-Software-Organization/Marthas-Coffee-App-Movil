<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Marthas_Coffee_App_Movil.Pages.Bebidas"
             
             Title="Bebidas">

    <VerticalStackLayout BackgroundColor="#6A4512">
        <HorizontalStackLayout Padding="10,10,10,10">

            <!-- Agregamos nuestro logo y definimos su orientación y tamaño -->

            <Image Source="logo.png" HeightRequest="100" WidthRequest="100"  HorizontalOptions="Start"/>

            <!-- Agregamos un label y definimos su color,tamaño,orientacion, y su propiedad text -->

            <Label FontFamily="raleway-boldf" TextColor="#FFFFFF" Margin="40,50,4,4" FontSize="40" FontAttributes="Bold" Text="Bebidas"  VerticalOptions="Center" HeightRequest="100" />

        </HorizontalStackLayout>
        <Label TextColor="LemonChiffon" HorizontalOptions="Center" FontSize="20" Text="Frias" FontAttributes="Bold"/>
        <Label/>

        <HorizontalStackLayout>
            <ImageButton Source="horchata.jpg"
                         WidthRequest="90"
                         HeightRequest="90"
                         CornerRadius="20"
                         Margin="10,10,10,10"
                         />

            <ImageButton Source="frape.jpg"
                         WidthRequest="90"
                         HeightRequest="90"
                         CornerRadius="20"
                         Margin="10,10,10,10"/>

            <ImageButton Source="limonada.jpg"
                         WidthRequest="90"
                         HeightRequest="90"
                         CornerRadius="20"
                         Margin="10,10,10,10"/>

            <ImageButton Source="licuado.jpg"
                         WidthRequest="90"
                         HeightRequest="90"
                         CornerRadius="20"
                         Margin="10,10,10,10"/>
        </HorizontalStackLayout>


        <HorizontalStackLayout Margin="10,0,10,10">

            <Label TextColor="#FFFFFF"  FontSize="10" Text="Horchata de Banana"  Margin="0,0,0,0" FontAttributes="Bold"/>

            <Label TextColor="#FFFFFF"  FontSize="10"  Text="Frape de Fresa"  Margin="28,0,0,0" FontAttributes="Bold"/>

            <Label TextColor="#FFFFFF"  FontSize="10"  Text="Limonada de Fresa"  Margin="32,0,0,0" FontAttributes="Bold"/>

            <Label TextColor="#FFFFFF"  FontSize="10"  Text="licuado de frutos rojos"  Margin="16,0,0,0" FontAttributes="Bold"/>

        </HorizontalStackLayout>

        <VerticalStackLayout HorizontalOptions="CenterAndExpand" Padding="10,0,10,10">
            <HorizontalStackLayout>

                <Label TextColor="#FFFFFF" FontSize="10"  Text="$:"  Margin="1,0,0,0" FontAttributes="Bold"/>

                <Label TextColor="#FFFFFF" FontSize="10"  Text="00.00"  Margin="1,0,0,0" FontAttributes="Bold"/>

                <Label TextColor="#FFFFFF" FontSize="10"  Text="$:"  Margin="60,0,0,0" FontAttributes="Bold"/>

                <Label TextColor="#FFFFFF" FontSize="10"  Text="00.00"  Margin="2,0,0,0" FontAttributes="Bold"/>

