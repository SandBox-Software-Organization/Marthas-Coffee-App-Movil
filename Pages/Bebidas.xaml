            <Label TextColor="#FFFFFF"  FontSize="10"  Text="Jugo de Jamica"  Margin="32,0,0,0" FontAttributes="Bold"/>

            <Label TextColor="#FFFFFF"  FontSize="10"  Text="Jugo de Mango"  Margin="42,0,0,0" FontAttributes="Bold"/>

        </HorizontalStackLayout>

        <VerticalStackLayout HorizontalOptions="CenterAndExpand" Padding="10,0,10,10">
