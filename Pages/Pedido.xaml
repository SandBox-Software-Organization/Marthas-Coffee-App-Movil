<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Marthas_Coffee_App_Movil.Pages.Pedido" 
             
             IconImageSource="pedidoicono"
             
             Title="Pedido">

    <ScrollView>

        <VerticalStackLayout Padding="10,10,10,10">
            
            <Grid RowSpacing="20" ColumnSpacing="20">

                <Grid.RowDefinitions>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition/>

                    <ColumnDefinition/>

                    <ColumnDefinition/>

                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" FontSize="40" FontAttributes="Bold" Text="Pedido"/>

                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold" Text="Estado actual de la orden"/>

            </Grid>

                

                
          
                            <Grid HorizontalOptions="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                <ListView ItemsSource="{Binding ListProducts}"
                         SeparatorVisibility="Default"
                                  Grid.Row="1" HorizontalOptions="Center">
                                    <ListView.Header>
                        <Grid HorizontalOptions="Center">
                                            <Grid.ColumnDefinitions>
                                               

                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="70"/>

                            </Grid.ColumnDefinitions>
                                    <Label FontSize="11" Text="PLATILLOS"    VerticalOptions="Center" FontAttributes="Bold"  Grid.Column="0"/>
                                    <Label FontSize="11" Text="BEBIDAS"     FontAttributes="Bold"   VerticalOptions="Center" Grid.Column="1"/>
                                    <Label FontSize="11" Text="POSTRES"    FontAttributes="Bold"   VerticalOptions="Center" Grid.Column="2"/>
                                    <Label FontSize="11" Text="BOCADILLOS"  FontAttributes="Bold"  VerticalOptions="Center" Grid.Column="3"/>
                                        </Grid>
                                    </ListView.Header>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                <Grid HorizontalOptions="Center">
                                    <Grid.RowDefinitions HorizontalOptions="Center">
                                        <RowDefinition Height="auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                         <ColumnDefinition Width="70"/>
                                                         <ColumnDefinition Width="70"/>
                                                         <ColumnDefinition Width="70"/>
                                                         <ColumnDefinition Width="70"/>
                                                    </Grid.ColumnDefinitions>
                                            <Label FontSize="11"  Text="{Binding Platillos}"  Grid.Column="0"/>
                                            <Label FontSize="11"  Text="{Binding Bebidas}"    Grid.Column="1"/>
                                            <Label FontSize="11"  Text="{Binding Postres}"    Grid.Column="2"/>
                                            <Label FontSize="11"  Text="{Binding Bocadillos}" Grid.Column="3"/>
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

           
            <VerticalStackLayout>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0,40,0,10">

                    <Button x:Name="Mas"   Padding="5,5,5,5" HorizontalOptions="Start" VerticalOptions="Center" Text="+" HeightRequest="40" WidthRequest="40" CornerRadius="60" FontAttributes="Bold"/>
                                                   
                    <Label                 Padding="5,5,5,5" HorizontalOptions="Center" VerticalOptions="Center" Text="0" FontAttributes="Bold"/>
                                                
                    <Button x:Name="Menos" Padding="5,5,5,5" HorizontalOptions="End" VerticalOptions="Center" Text="-" HeightRequest="40" WidthRequest="40" CornerRadius="60" FontAttributes="Bold"/>


            </HorizontalStackLayout>

        </VerticalStackLayout>

                    <Label  HorizontalOptions="CenterAndExpand" Padding="10,10,10,10" FontSize="20" FontAttributes="Bold" Text="Rellene los campos" />

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
              

                <Label HorizontalTextAlignment="Start" FontSize="15" FontAttributes="Bold" Margin="0,0,50,0" Text="Nombre:"  VerticalOptions="CenterAndExpand"/>
                <Entry Placeholder="Digite su nombre"  Margin="0,0,10,10"  x:Name="NombreCli" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" WidthRequest="200" HeightRequest="35"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
   
                <Label  HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand" FontAttributes="Bold" Text="NÂ° de tarjeta:"/>
                <Entry  HorizontalOptions="EndAndExpand" Margin="20,10,10,10"  Keyboard="Numeric" Placeholder="Tarjeta de credito" x:Name="Tarjeta" VerticalOptions="CenterAndExpand"  WidthRequest="200" HeightRequest="35" />

            </HorizontalStackLayout>

            <Button HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" x:Name="pedido" Text="Realizar orden" FontAttributes="Bold" HeightRequest="50" WidthRequest="150" CornerRadius="30"/>
        </VerticalStackLayout>

    </ScrollView>
    
</ContentPage>