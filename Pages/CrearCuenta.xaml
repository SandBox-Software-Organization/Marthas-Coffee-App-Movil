            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">

                <Label Text="Nombres:" HorizontalOptions="StartAndExpand"></Label>

                <Entry HorizontalOptions="EndAndExpand"></Entry>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <VerticalStackLayout HorizontalOptions="CenterAndExpand"
                             >
            <Button Text="Crear cuenta"></Button>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>